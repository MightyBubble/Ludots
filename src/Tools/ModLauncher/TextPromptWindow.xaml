<Window x:Class="Ludots.ModLauncher.TextPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input"
        Width="420"
        Height="180"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding PromptTitle, RelativeSource={RelativeSource AncestorType=Window}}"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource PrimaryText}"/>

        <TextBlock Grid.Row="1"
                   Margin="0,10,0,6"
                   Text="{Binding PromptLabel, RelativeSource={RelativeSource AncestorType=Window}}"
                   Foreground="{StaticResource SecondaryText}"/>

        <TextBox Grid.Row="2"
                 x:Name="InputBox"
                 Text="{Binding Value, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}"
                 Background="{StaticResource PanelBackground}"
                 Foreground="{StaticResource PrimaryText}"
                 BorderBrush="{StaticResource BorderColor}"
                 BorderThickness="1"
                 Padding="10,6"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
            <Button Content="Cancel" Width="90" Margin="0,0,10,0" Background="#444444" Click="Cancel_Click"/>
            <Button Content="OK" Width="90" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>

