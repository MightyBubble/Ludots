<Window x:Class="Ludots.ModLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ludots.ModLauncher"
        xmlns:cfg="clr-namespace:Ludots.ModLauncher.Config"
        mc:Ignorable="d"
        Title="Ludots Mod Launcher" Height="720" Width="1180" MinHeight="620" MinWidth="980"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1A1A1A" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="18,14">
            <DockPanel LastChildFill="True">
                <TextBlock DockPanel.Dock="Left" Text="LUDOTS" FontSize="20" FontWeight="Bold" Foreground="{StaticResource AccentColor}" VerticalAlignment="Center"/>
                <TextBlock DockPanel.Dock="Left" Text="MOD LAUNCHER" Margin="10,0,0,0" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource PrimaryText}" VerticalAlignment="Center"/>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Add Mod Dir" Command="{Binding AddModDirectoryCommand}" Background="#333333" Margin="0,0,10,0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" MinWidth="240"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{StaticResource PanelBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Dependency Graph" FontWeight="Bold" Foreground="{StaticResource SecondaryText}" Margin="14,12,14,8"/>
                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="Transparent" BorderThickness="0" Padding="10">
                        <Canvas Width="{Binding DependencyGraphWidth}" Height="{Binding DependencyGraphHeight}">
                            <ItemsControl ItemsSource="{Binding DependencyGraphEdges}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Canvas.Left" Value="0"/>
                                        <Setter Property="Canvas.Top" Value="0"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Canvas>
                                            <Line X1="{Binding X1}" Y1="{Binding Y1}" X2="{Binding X2}" Y2="{Binding Y2}" StrokeThickness="1">
                                                <Line.Style>
                                                    <Style TargetType="Line">
                                                        <Setter Property="Stroke" Value="#555555"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsError}" Value="True">
                                                                <Setter Property="Stroke" Value="#E74C3C"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Line.Style>
                                            </Line>
                                            <TextBlock Canvas.Left="{Binding LabelX}" Canvas.Top="{Binding LabelY}" Text="{Binding Label}" FontSize="10" Foreground="{StaticResource SecondaryText}"/>
                                        </Canvas>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <ItemsControl ItemsSource="{Binding DependencyGraphNodes}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                        <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="{x:Static local:DependencyGraphNodeViewModel.NodeWidth}" Height="{x:Static local:DependencyGraphNodeViewModel.NodeHeight}" Background="#222222" BorderThickness="1" CornerRadius="4" Padding="8,6">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="BorderBrush" Value="#444444"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsMissing}" Value="True">
                                                            <Setter Property="BorderBrush" Value="#E74C3C"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsCycle}" Value="True">
                                                            <Setter Property="BorderBrush" Value="#F39C12"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse Width="10" Height="10" VerticalAlignment="Center" Margin="0,0,8,0">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Setter Property="Fill" Value="#666666"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding BuildState}" Value="{x:Static local:ModBuildState.NoProject}">
                                                                    <Setter Property="Fill" Value="#777777"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding BuildState}" Value="{x:Static local:ModBuildState.Outdated}">
                                                                    <Setter Property="Fill" Value="#F1C40F"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding BuildState}" Value="{x:Static local:ModBuildState.Queued}">
                                                                    <Setter Property="Fill" Value="#3498DB"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding BuildState}" Value="{x:Static local:ModBuildState.Building}">
                                                                    <Setter Property="Fill" Value="#9B59B6"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding BuildState}" Value="{x:Static local:ModBuildState.Succeeded}">
                                                                    <Setter Property="Fill" Value="#2ECC71"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding BuildState}" Value="{x:Static local:ModBuildState.Failed}">
                                                                    <Setter Property="Fill" Value="#E74C3C"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsMissing}" Value="True">
                                                                    <Setter Property="Fill" Value="#E74C3C"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsCycle}" Value="True">
                                                                    <Setter Property="Fill" Value="#F39C12"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                                <TextBlock Text="{Binding DisplayText}" VerticalAlignment="Center" Foreground="{StaticResource PrimaryText}" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Canvas>
                    </ScrollViewer>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1"
                          Width="8"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="#2B2B2B"
                          ResizeBehavior="PreviousAndNext"
                          ResizeDirection="Columns"/>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Border Background="{StaticResource PanelBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="6" Padding="14">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Playset" Foreground="{StaticResource SecondaryText}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Width="260"
                                      ItemsSource="{Binding Presets}"
                                      SelectedItem="{Binding SelectedPreset}"
                                      DisplayMemberPath="Name"
                                      Background="#1E1E1E"
                                      Foreground="{StaticResource PrimaryText}"
                                      BorderBrush="{StaticResource BorderColor}"
                                      BorderThickness="1"
                                      Padding="6,4"/>
                            <TextBlock Text="*"
                                       Margin="8,0,0,0"
                                       Foreground="#F1C40F"
                                       FontWeight="Bold"
                                       Visibility="{Binding IsSelectedPresetDirty, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Save" Command="{Binding SavePresetCommand}" Background="#333333" Margin="0,0,10,0"/>
                            <Button Content="Save As" Command="{Binding SavePresetAsCommand}" Background="#333333" Margin="0,0,10,0"/>
                            <Button Content="Delete" Command="{Binding DeletePresetCommand}" Background="#444444" Margin="0,0,10,0"/>
                            <Button Content="Cards" Command="{Binding SetCardViewCommand}" Background="#333333" Margin="0,0,10,0"/>
                            <Button Content="List" Command="{Binding SetListViewCommand}" Background="#333333"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Background="{StaticResource PanelBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="6" Padding="10" Margin="0,14,0,0">
                    <Grid>
                        <ContentControl x:Name="CardView">
                            <ContentControl.Style>
                                <Style TargetType="ContentControl">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ViewMode}" Value="{x:Static cfg:LauncherViewMode.Cards}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="4">
                                <ItemsControl ItemsSource="{Binding Mods}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="360" Margin="8" CornerRadius="8" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Background="#1F1F1F" Padding="10">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="120"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Width="110" Height="74" CornerRadius="6" Background="#2B2B2B" BorderBrush="#3A3A3A" BorderThickness="1">
                                                        <Grid>
                                                            <Image Source="{Binding ThumbnailImage}" Stretch="UniformToFill"/>
                                                            <TextBlock Text="No Image"
                                                                       Foreground="{StaticResource SecondaryText}"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ThumbnailImage}" Value="{x:Null}">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Grid>
                                                    </Border>

                                                    <Grid Grid.Column="1" Margin="12,0,0,0">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="*"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <DockPanel LastChildFill="True">
                                                            <CheckBox DockPanel.Dock="Right" IsChecked="{Binding IsActive}" VerticalAlignment="Center"/>
                                                            <StackPanel Orientation="Horizontal">
                                                                <Ellipse Width="10" Height="10" VerticalAlignment="Center" Margin="0,0,8,0">
                                                                    <Ellipse.Style>
                                                                        <Style TargetType="Ellipse">
                                                                            <Setter Property="Fill" Value="#666666"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding BuildState}" Value="{x:Static local:ModBuildState.NoProject}">
                                                                                    <Setter Property="Fill" Value="#777777"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding BuildState}" Value="{x:Static local:ModBuildState.Outdated}">
                                                                                    <Setter Property="Fill" Value="#F1C40F"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding BuildState}" Value="{x:Static local:ModBuildState.Queued}">
                                                                                    <Setter Property="Fill" Value="#3498DB"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding BuildState}" Value="{x:Static local:ModBuildState.Building}">
                                                                                    <Setter Property="Fill" Value="#9B59B6"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding BuildState}" Value="{x:Static local:ModBuildState.Succeeded}">
                                                                                    <Setter Property="Fill" Value="#2ECC71"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding BuildState}" Value="{x:Static local:ModBuildState.Failed}">
                                                                                    <Setter Property="Fill" Value="#E74C3C"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Ellipse.Style>
                                                                </Ellipse>
                                                                <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource PrimaryText}" TextTrimming="CharacterEllipsis"/>
                                                            </StackPanel>
                                                        </DockPanel>

                                                        <TextBlock Grid.Row="1" Text="{Binding Version}" FontSize="12" Foreground="{StaticResource SecondaryText}" Margin="0,4,0,0"/>
                                                        <TextBlock Grid.Row="2" Text="{Binding Description}" FontSize="12" Foreground="{StaticResource SecondaryText}" TextWrapping="Wrap" Margin="0,6,0,0"/>

                                                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                                            <Button Content="Fix Project"
                                                                    Command="{Binding DataContext.FixModProjectCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}"
                                                                    IsEnabled="{Binding DataContext.IsNotBuilding, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    Background="#444444"
                                                                    FontSize="12"
                                                                    Padding="10,4"
                                                                    Margin="0,0,8,0"
                                                                    Visibility="{Binding HasNoProject, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                            <Button Content="Build"
                                                                    Command="{Binding DataContext.BuildModCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}"
                                                                    IsEnabled="{Binding DataContext.IsNotBuilding, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    Background="#333333"
                                                                    FontSize="12"
                                                                    Padding="10,4"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </ContentControl>

                        <ContentControl x:Name="ListView">
                            <ContentControl.Style>
                                <Style TargetType="ContentControl">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ViewMode}" Value="{x:Static cfg:LauncherViewMode.List}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                            <ListBox ItemsSource="{Binding Mods}" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Stretch">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <CheckBox IsChecked="{Binding IsActive}" VerticalAlignment="Center" Margin="0,0,15,0"/>

                                            <StackPanel Grid.Column="1">
                                                <StackPanel Orientation="Horizontal">
                                                    <Ellipse Width="10" Height="10" VerticalAlignment="Center" Margin="0,0,8,0">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Setter Property="Fill" Value="#666666"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding BuildState}" Value="{x:Static local:ModBuildState.NoProject}">
                                                                        <Setter Property="Fill" Value="#777777"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding BuildState}" Value="{x:Static local:ModBuildState.Outdated}">
                                                                        <Setter Property="Fill" Value="#F1C40F"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding BuildState}" Value="{x:Static local:ModBuildState.Queued}">
                                                                        <Setter Property="Fill" Value="#3498DB"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding BuildState}" Value="{x:Static local:ModBuildState.Building}">
                                                                        <Setter Property="Fill" Value="#9B59B6"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding BuildState}" Value="{x:Static local:ModBuildState.Succeeded}">
                                                                        <Setter Property="Fill" Value="#2ECC71"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding BuildState}" Value="{x:Static local:ModBuildState.Failed}">
                                                                        <Setter Property="Fill" Value="#E74C3C"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                    </Ellipse>
                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="16" Foreground="{StaticResource PrimaryText}"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Version}" FontSize="12" Foreground="{StaticResource SecondaryText}" Margin="0,2,0,0"/>
                                                <TextBlock Text="{Binding Description}" FontSize="12" Foreground="{StaticResource SecondaryText}" Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="Fix Project"
                                                        Command="{Binding DataContext.FixModProjectCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"
                                                        IsEnabled="{Binding DataContext.IsNotBuilding, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        Background="#444444" FontSize="12" Padding="10,4" Margin="0,0,8,0"
                                                        Visibility="{Binding HasNoProject, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                <Button Content="Build"
                                                        Command="{Binding DataContext.BuildModCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"
                                                        IsEnabled="{Binding DataContext.IsNotBuilding, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        Background="#333333" FontSize="12" Padding="10,4"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ContentControl>
                    </Grid>
                </Border>

                <GridSplitter Grid.Row="2" Height="8" HorizontalAlignment="Stretch" Background="#2B2B2B" Margin="0,10,0,10"/>

                <Border Grid.Row="3" Background="#111111" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="6">
                    <TextBox Text="{Binding BuildLog}" IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                             Background="Transparent" Foreground="#AAAAAA" FontFamily="Consolas" FontSize="12" Padding="12" TextWrapping="Wrap" BorderThickness="0"/>
                </Border>
            </Grid>
        </Grid>

        <Grid Grid.Row="2" Margin="20,0,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Visibility="{Binding IsBuilding, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,0,0,10">
                <ProgressBar Height="4" IsIndeterminate="True" Background="#333333" Foreground="{StaticResource AccentColor}" BorderThickness="0"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Foreground="{StaticResource SecondaryText}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Build Mods" Command="{Binding BuildActiveModsCommand}" Background="#333333" Margin="0,0,10,0" IsEnabled="{Binding IsNotBuilding}"/>
                    <Button Content="Build Raylib" Command="{Binding BuildDesktopCommand}" Background="#333333" Margin="0,0,10,0" IsEnabled="{Binding IsNotBuilding}"/>
                    <Button Content="Refresh" Command="{Binding LoadModsCommand}" Background="#444444" Margin="0,0,10,0" IsEnabled="{Binding IsNotBuilding}"/>
                    <Button Content="LAUNCH GAME" Command="{Binding LaunchGameCommand}" FontWeight="Bold" FontSize="14" Padding="30,10" IsEnabled="{Binding IsNotBuilding}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
